<?xml version="1.0" encoding="utf-8"?>
<!--CardView used a parent Layout-->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp"
    app:contentPadding="16dp">

    <!--LinearLayout used with vertical alignment
    with ImageView, TextView and Button as child elements-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/favoriteRecipeImage"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_image_black_24dp"/>

        <TextView
            android:id="@+id/favoriteRecipeName"
            android:text="HELLO"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/khula_regularr"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/favoriteRecipeURL"
            android:padding="9dp"
            android:text="View Recipe"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:fontFamily="@font/khula_regularr"
            android:textAllCaps="false"
            android:background="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v7.widget.CardView>