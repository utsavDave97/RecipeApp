<?xml version="1.0" encoding="utf-8"?>
<!--Declaring StepperLayout in the view & assigning different properties-->
<com.stepstone.stepper.StepperLayout
    android:id="@+id/stepperLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ms_stepperType="tabs"
    app:ms_showBackButtonOnFirstStep="false"
    app:ms_activeStepColor="@color/colorAccent"
    app:ms_inactiveStepColor="@color/colorPrimary"
    app:ms_nextButtonColor="@color/black"
    app:ms_showErrorStateEnabled="true"
    app:ms_showErrorMessageEnabled="true"
    app:ms_backButtonColor="@color/black"
    app:ms_completeButtonColor="#4CAF50"
    tools:context=".CreateYourOwn"/>
