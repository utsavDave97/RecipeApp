<?xml version="1.0" encoding="utf-8"?>
<!--This layout file would be each item inside RecyclerView on HomeScreen-->
<LinearLayout
    android:id="@+id/linearLayout"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:contentPadding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/recipeImage"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_image_black_24dp" />

            <LinearLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recipeNameTextView"
                    android:textStyle="normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/khula_lightt"
                    android:text="Recipe Name"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/recipeRatingsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/khula_regularr"
                    android:text="Ratings"
                    android:textColor="#D0021B"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:layout_weight="1"
                    android:padding="9dp"
                    android:layout_gravity="start"
                    android:id="@+id/webButton"
                    android:text="View"
                    android:textColor="@color/black"
                    android:fontFamily="@font/khula_lightt"
                    android:drawableLeft="@drawable/ic_web_black_24dp"
                    android:textAllCaps="false"
                    android:background="@drawable/button_border"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />


                <ImageButton
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:background="#FFFFFF"
                    android:id="@+id/favoriteButton"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_favorite_border_black_24dp" />

                <ImageButton
                    android:layout_weight="1"
                    android:layout_gravity="end"
                    android:background="#FFFFFF"
                    android:id="@+id/shareButton"
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_share_black_24dp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@android:color/darker_gray" />

</LinearLayout>